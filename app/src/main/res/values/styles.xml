<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!--<item name="android:windowFullscreen">true</item>-->
        <!--&lt;!&ndash; 隐藏标题栏 &ndash;&gt;-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--toolbar背景色-->
        <!--<item name="android:fitsSystemWindows">true</item>-->
        //设置状态栏和导航栏颜色
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--<item name="android:statusBarColor">@color/white</item>-->
        <item name="colorPrimary">@color/white</item>
        手机最上方通知栏颜色
        <item name="colorPrimaryDark">@color/balck</item>
        <!--toolbar里文本颜色-->
        <item name="android:textColorPrimary">@color/textColor</item>

        <!--<item name="android:windowEnableSplitTouch" >false </item>-->
        <!--<item name="android:splitMotionEvents" >false </item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!--toolbar背景色-->
        <item name="colorPrimary">@color/white</item>
        <!--手机最上方通知栏颜色-->
        <item name="colorPrimaryDark">@color/white</item>
        <!--toolbar里文本颜色-->
        <item name="android:textColorPrimary">@color/balck</item>
    </style>

    <style name="line_hor">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#f0f0f0</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="line_ver">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#f0f0f0</item>
        <item name="android:layout_width">1dp</item>
    </style>

    <style name="line_my">
        <item name="android:layout_height">17dp</item>
        <item name="android:background">#919191</item>
        <item name="android:layout_width">1dp</item>
    </style>

    <style name="style_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LunchTheme" parent="Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!--下面这句如果你加上觉得好看就加，不好看就不加咯-->
        <!--<item name="android:navigationBarColor">@color/transparent</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@mipmap/qidong</item>
    </style>

    <style name="room_more_dlg" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="common_dlg" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="room_setting_dlg" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="progressBarHorizontal_indeter" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">3dp</item>
        <item name="android:maxHeight">3dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--&lt;!&ndash; 自定义loading dialog &ndash;&gt;-->
