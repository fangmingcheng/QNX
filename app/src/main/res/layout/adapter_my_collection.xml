<?xml version="1.0" encoding="utf-8"?>
<zgt.com.example.myzq.model.common.custom_view.LeftSlideView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="1dp"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_delete"
            android:layout_height="match_parent"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/layout_content"
            android:text="删 除"
            android:layout_alignTop="@+id/layout_content"
            android:layout_alignBottom="@+id/layout_content"
            android:textSize="25dp"
            android:background="@drawable/pink_background"
            android:textColor="#DDFFFFFF"
            />


        <LinearLayout
            android:id="@+id/layout_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="57dp">

                <zgt.com.example.myzq.model.common.custom_view.MyImageView
                    android:id="@+id/Iv_head"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="14dp"
                    app:srcCompat="@drawable/bg_code" />

                <TextView
                    android:id="@+id/Tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/Iv_head"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/Iv_head"
                    android:text="某某投顾"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/Tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/Tv_name"
                    android:layout_below="@+id/Tv_name"
                    android:layout_marginTop="2dp"
                    android:text="2019-5-28 15:49"
                    android:textColor="#919191"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/Tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/Tv_name"
                    android:layout_marginRight="14dp"
                    android:text="0"
                    android:textColor="#919191"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_alignBottom="@+id/Tv_num"
                    android:layout_toStartOf="@+id/Tv_num"
                    app:srcCompat="@mipmap/ic_ydl" />
            </RelativeLayout>

            <TextView
                android:id="@+id/Tv_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_width="match_parent"
                android:textColor="#333333"
                android:lineSpacingMultiplier="1.2"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

</zgt.com.example.myzq.model.common.custom_view.LeftSlideView>