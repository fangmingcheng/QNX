<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="285dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="218"
        android:layout_height="match_parent">


        <zgt.com.example.myzq.model.common.custom_view.MyImageView
            android:id="@+id/Iv_head"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="17dp"
            app:srcCompat="@drawable/bg_code" />

        <TextView
            android:id="@+id/Tv_name"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/Iv_head"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/Iv_head"
            android:text="TextView" />

        <TextView
            android:id="@+id/Tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#919191"
            android:textSize="12sp"
            android:paddingRight="2dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_alignBottom="@+id/Iv_head"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/Iv_head"
            android:text="TextView" />

    </RelativeLayout>


    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="70"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView13"
            android:src="@mipmap/bg_redu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/Tv_num"
            android:textColor="#FFAE00"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="1234" />

        <TextView
            android:id="@+id/textView9"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#919191"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="粉丝数" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="10dp"
        android:background="#f1f1f1"
        android:layout_height="match_parent"></LinearLayout>


</LinearLayout>