<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zgt.com.example.myzq.model.common.login.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:background="@mipmap/bg_welcome">
        <TextView
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:text="账号注册"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:layout_width="77dp"
        android:layout_marginTop="81dp"
        android:background="@mipmap/bg_head_background"
        android:layout_gravity="center_horizontal"
        android:layout_height="77dp" />

    <ImageView
        android:layout_width="61dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/qnx"
        android:layout_gravity="center_horizontal"
        android:layout_height="61dp" />

    <LinearLayout
        android:layout_marginTop="178dp"
        android:layout_gravity="center|top"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:background="@mipmap/bg_undulating_background"
        android:layout_height="wrap_content">
        <EditText
            android:paddingLeft="2dp"
            android:id="@+id/Et_name"
            android:drawableLeft="@mipmap/image_yonghuming"
            android:hint="  输入用户名"
            android:textColorHint="#cccccc"
            android:textSize="14sp"
            android:singleLine="true"
            android:background="@drawable/et_underline_selected"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_width="match_parent"
            android:layout_height="47dp" />
        <EditText
            android:paddingLeft="2dp"
            android:id="@+id/Et_phone"
            android:inputType="phone"
            android:drawableLeft="@mipmap/image_account"
            android:hint="  输入手机号"
            android:textColorHint="#cccccc"
            android:textSize="14sp"
            android:singleLine="true"
            android:background="@drawable/et_underline_selected"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_width="match_parent"
            android:layout_height="47dp" />

        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_below="@+id/login_name"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/button"
                android:background="@drawable/bg_code"
                android:layout_gravity="end"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:text="获取验证码"
                android:layout_width="77dp"
                android:layout_height="27dp"
                android:layout_marginRight="50dp" />

            <EditText
                android:paddingLeft="2dp"
                android:id="@+id/Et_code"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="29dp"
                android:background="@drawable/et_underline_selected"
                android:drawableLeft="@mipmap/image_yz"
                android:ems="6"
                android:inputType="number"
                android:hint="  输入验证码"
                android:singleLine="true"
                android:textColorHint="#cccccc"
                android:textSize="14sp" />
        </FrameLayout>
        <EditText
            android:paddingLeft="2dp"
            android:id="@+id/Et_password"
            android:hint="  输入密码"
            android:textColorHint="#cccccc"
            android:background="@drawable/et_underline_selected"
            android:textSize="14sp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:drawableLeft="@mipmap/image_password"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_width="match_parent"
            android:layout_height="47dp" />

        <EditText
            android:paddingLeft="2dp"

            android:id="@+id/Et_invite"
            android:hint="  输入邀请码"
            android:textColorHint="#cccccc"
            android:background="@drawable/et_underline_selected"
            android:textSize="14sp"
            android:singleLine="true"
            android:drawableLeft="@mipmap/image_yaoqingma"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_width="match_parent"
            android:layout_height="47dp" />

        <Button
            android:id="@+id/Bt_login"
            android:layout_marginTop="25dp"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:background="@drawable/bg_et"
            android:layout_width="match_parent"
            android:layout_height="36dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_marginBottom="47dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="——————    深圳中广欢迎您    ——————"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>
