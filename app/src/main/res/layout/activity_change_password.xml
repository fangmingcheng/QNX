<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zgt.com.example.myzq.model.common.login.ChangePasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:background="@mipmap/bg_welcome">
        <TextView
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:text="修改密码"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:layout_width="77dp"
        android:layout_marginTop="81dp"
        android:background="@mipmap/bg_head_background"
        android:layout_gravity="center_horizontal"
        android:layout_height="77dp" />

    <ImageView
        android:layout_width="61dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/qnx"
        android:layout_gravity="center_horizontal"
        android:layout_height="61dp" />

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_marginBottom="47dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="——————    深圳中广欢迎您    ——————"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="178dp"
        android:background="@mipmap/bg_undulating_background"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Et_password"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/et_underline_selected"
            android:drawableLeft="@mipmap/image_password"
            android:hint="  新密码"
            android:paddingLeft="2dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/Et_password_new"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:background="@drawable/et_underline_selected"
            android:drawableLeft="@mipmap/image_password"
            android:hint="  确认新密码"
            android:inputType="textPassword"
            android:paddingLeft="2dp"
            android:singleLine="true"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />

        <Button
            android:id="@+id/Bt_login"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_et"
            android:text="确认"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </LinearLayout>

</FrameLayout>
