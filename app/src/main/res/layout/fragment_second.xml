<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zgt.com.example.myzq.model.common.home.fragment.SecondFragment">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <ImageView
            android:background="@mipmap/bannervip1"
            android:layout_width="14dp"
            android:layout_gravity="center"
            android:layout_height="121dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@mipmap/banner_vip">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                android:text="博弈版"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Tv_price"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView3"
                android:layout_centerVertical="true"
                android:layout_marginTop="12dp"
                android:text="价格：3800元/年"
                android:textColor="#D9D9D9" />

            <TextView
                android:id="@+id/Tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/Tv_price"
                android:layout_below="@+id/Tv_price"
                android:layout_marginTop="9dp"
                android:textSize="14sp"
                android:text="TextView"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/Tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Tv_status"
                android:layout_alignStart="@+id/Tv_status"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </RelativeLayout>

        <ImageView
            android:background="@mipmap/bannervip2"
            android:layout_width="14dp"
            android:layout_gravity="center"
            android:layout_height="121dp" />
    </LinearLayout>

    <ScrollView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="19dp"
                    app:srcCompat="@mipmap/ic_tequan" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="18dp"
                    android:textColor="#333333"
                    android:layout_toEndOf="@+id/imageView3"
                    android:text="特权功能" />
                <TextView
                    android:id="@+id/Tv_content"
                    android:layout_marginTop="20dp"
                    android:textSize="14dp"
                    android:layout_marginEnd="24dp"
                    android:textColor="#999999"
                    android:lineSpacingExtra="2dp"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/textView5"
                    android:layout_alignStart="@+id/textView5"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="19dp"
                    app:srcCompat="@mipmap/ic_wxtishi" />
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="18dp"
                    android:textColor="#333333"
                    android:layout_toEndOf="@+id/imageView4"
                    android:text="温馨提示" />
                <TextView
                    android:id="@+id/Tv_tips"
                    android:layout_marginTop="20dp"
                    android:textSize="14dp"
                    android:layout_marginEnd="24dp"
                    android:textColor="#999999"
                    android:lineSpacingExtra="2dp"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/textView6"
                    android:layout_alignStart="@+id/textView6"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
