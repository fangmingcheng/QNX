<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zgt.com.example.myzq.model.common.home.GoldInvestmentActivity">

    <RelativeLayout
        android:background="#47443E"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/Tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="会员版本"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
        <ImageView
            android:id="@+id/Iv_customer"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignTop="@+id/Tv_title"
            android:layout_marginStart="14dp"
            app:srcCompat="@mipmap/ic_fanhuibai" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#47443E"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@mipmap/bg_vipxiangqing"
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <zgt.com.example.myzq.model.common.custom_view.MyImageView
                android:id="@+id/Iv_head"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="9dp"
                app:srcCompat="@drawable/bg_code" />

            <TextView
                android:id="@+id/Tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="22dp"
                android:layout_toEndOf="@+id/Iv_head"
                android:text="TextView" />

            <TextView
                android:id="@+id/Tv_num"
                android:layout_width="wrap_content"
                android:textColor="#333333"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Tv_name"
                android:layout_alignLeft="@+id/Tv_name"
                android:layout_marginTop="10dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/Tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_alignStart="@+id/Iv_head"
                android:layout_below="@+id/Iv_head"
                android:layout_marginTop="23dp"
                android:text="至尊版" />

            <TextView
                android:id="@+id/Tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="#333333"
                android:textSize="12sp"
                android:layout_alignTop="@+id/Tv_status"
                android:layout_marginEnd="24dp"
                android:text="16:16:43" />
        </RelativeLayout>

            <TextView
                android:id="@+id/Tv_introduce"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="19dp"
                android:layout_width="match_parent"
                android:textSize="11sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:textColor="#919191"
                android:layout_height="wrap_content" />




    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp">
                <TextView
                    android:id="@+id/Tv_live"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="直播"
                    android:textSize="14sp"
                    android:textColor="#FFAE00"
                    android:gravity="center"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/Tv_stock"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="评股"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/Tv_interaction"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="互动"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sursor"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="2dp"
                >
                <!-- 指示标签 -->
                <ImageView
                    android:id="@+id/Iv_live"
                    android:layout_width="0dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    />
                <ImageView
                    android:id="@+id/Iv_stock"
                    android:layout_width="0dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    />
                <ImageView
                    android:id="@+id/Iv_interaction"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <android.support.v4.view.ViewPager
                android:id="@+id/myviewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            </android.support.v4.view.ViewPager>


</LinearLayout>
