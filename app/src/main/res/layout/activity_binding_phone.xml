<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zgt.com.example.myzq.model.common.personal_center.BindingPhoneActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp">
        <TextView
            android:id="@+id/Tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="绑定手机"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/Iv_back"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignTop="@+id/Tv_title"
            android:layout_marginStart="14dp"
            app:srcCompat="@mipmap/left_return" />
    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="#f1f1f1"></LinearLayout>

    <EditText
        android:id="@+id/Et_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@null"
        android:hint="请输入常用手机号"
        android:paddingLeft="14dp"
        android:inputType="phone"
        android:singleLine="true"
        android:textColor="#333333"
        android:textColorHint="#919191"
        android:textSize="14sp" />

    <View style="@style/line_hor"
        android:layout_marginLeft="14dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="48dp">
        <EditText
            android:id="@+id/Et_code"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:hint="验证码"
            android:textSize="14sp"
            android:singleLine="true"
            android:paddingLeft="14dp"
            android:textColorHint="#919191"
            android:textColor="#333333"
            android:background="@null"
            android:layout_height="match_parent" />
        <View style="@style/line_my"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/Tv_send"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="12dp"
            android:textColor="#333333"
            android:gravity="center"
            android:text="获取验证码"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View style="@style/line_hor"
        android:layout_marginLeft="14dp"/>

    <EditText
        android:inputType="textPassword"
        android:id="@+id/Et_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@null"
        android:hint="请输入密码"
        android:paddingLeft="14dp"
        android:singleLine="true"
        android:textColor="#333333"
        android:textColorHint="#919191"
        android:textSize="14sp" />

    <LinearLayout
        android:background="#f1f1f1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/Tv_save"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="确认"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:background="@drawable/bg_et"
            android:layout_marginTop="32dp"
            android:layout_height="48dp" />
    </LinearLayout>


</LinearLayout>
