<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="200dp">
<LinearLayout
    android:layout_width="match_parent"
    android:background="#f1f1f1"
    android:layout_height="8dp"></LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp">
        <TextView
            android:id="@+id/Tv_billno"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="13sp"
            android:paddingLeft="14dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:id="@+id/Tv_status"
            android:layout_marginRight="14dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f1f1f1"
        android:layout_height="1dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/Ll_course"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <zgt.com.example.myzq.model.common.custom_view.MyImageBackgroundView
                android:id="@+id/Iv_head"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"
                android:layout_width="108dp"
                android:layout_height="65dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/Tv_title"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:textColor="#333333"
                android:textSize="14sp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/Tv_teacher"
                android:layout_marginTop="4dp"
                android:paddingLeft="10dp"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/Tv_price"
                    android:paddingLeft="10dp"
                    android:textColor="#E46866"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/Tv_num"
                    android:gravity="end"
                    android:paddingRight="10dp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f1f1f1"
        android:layout_height="1dp"></LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <TextView
            android:id="@+id/Tv_date"
            android:textColor="#919191"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:text="下单日期："
            android:paddingLeft="14dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        
        <Button
            android:id="@+id/Bt_delete"
            android:layout_width="76dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:text="取消订单"
            android:textSize="12dp"
            android:background="#ffffff"
            android:textColor="#919191"
            android:layout_height="35dp" />

        <Button
            android:id="@+id/Bt_commit"
            android:layout_width="76dp"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:text="去支付"
            android:textSize="12dp"
            android:background="#ffffff"
            android:textColor="#E46866"
            android:layout_height="36dp" />

        <TextView
            android:visibility="gone"
            android:textSize="13sp"
            android:textColor="#333333"
            android:layout_marginRight="14dp"
            android:id="@+id/Tv_status_bill"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>