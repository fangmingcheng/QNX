<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".model.common.refund.RefundDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="32dp">
        <TextView
            android:id="@+id/Tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="退款进度"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="17sp" />
        <ImageView
            android:id="@+id/Iv_back"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignTop="@+id/Tv_title"
            android:layout_marginStart="14dp"
            app:srcCompat="@mipmap/left_return" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f1f1f1"
        android:layout_height="1dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp">
        <TextView
            android:id="@+id/Tv_billno"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="13sp"
            android:text="订单编号"
            android:paddingLeft="14dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="13sp"
            android:id="@+id/Tv_status"
            android:layout_marginRight="14dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f1f1f1"
        android:layout_height="10dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/Ll_course"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <zgt.com.example.myzq.model.common.custom_view.MyImageBackgroundView
                android:id="@+id/Iv_head"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:scaleType="fitXY"
                android:layout_width="108dp"
                android:layout_height="65dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/Tv_course_title"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#333333"
                android:textSize="14sp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/Tv_teacher"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/Tv_price"
                    android:paddingLeft="10dp"
                    android:textColor="#E46866"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/Tv_num"
                    android:gravity="end"
                    android:paddingRight="10dp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f1f1f1"
        android:layout_height="10dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:text="申请时间"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:textColor="#333333"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/Tv_date"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="15sp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="15dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f1f1f1"
        android:layout_height="1dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:text="退款金额"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:textColor="#333333"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/Tv_refund_price"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="15sp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="15dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f1f1f1"
        android:layout_height="1dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:text="服务中止日期"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:textColor="#333333"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/Tv_stop_date"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="15sp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="15dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f1f1f1"
        android:layout_height="10dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:textColor="#666666"
                android:textSize="13sp"
                android:text="待审核"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/Iv_1"
                    android:src="@mipmap/ic_yish"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_toRightOf="@id/Iv_1"
                    android:background="#c3f3d3"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2.4dp" />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/Tv_examine"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:textColor="#666666"
                android:textSize="13sp"
                android:text="已审核"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/Iv_examine"
                    android:src="@mipmap/ic_wsh"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_toRightOf="@id/Iv_examine"
                    android:background="#c3f3d3"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2.4dp" />
                <ImageView

                    android:layout_toLeftOf="@id/Iv_examine"
                    android:background="#c3f3d3"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2.4dp" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/Tv_complete"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:textColor="#666666"
                android:textSize="13sp"
                android:text="已通过"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/Iv_complete"
                    android:src="@mipmap/ic_wsh"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_toLeftOf="@id/Iv_complete"
                    android:background="#c3f3d3"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2.4dp" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f1f1f1"
        android:layout_height="1dp"></LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/Tv_reapply"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#FFAE00"
        android:text="重新申请"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#f1f1f1"
        android:layout_height="10dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/Ll_reason"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="24dp"
            android:id="@+id/Tv_reason"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#f1f1f1"
            android:layout_height="10dp"></LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="退款协议"
            android:layout_marginLeft="14dp"
            android:textSize="15sp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <ListView
            android:layout_marginTop="10dp"
            android:id="@+id/Lv_agreement"
            android:layout_marginLeft="14dp"
            android:divider="#00000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
    </LinearLayout>

</LinearLayout>