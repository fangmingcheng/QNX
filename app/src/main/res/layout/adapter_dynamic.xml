<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <zgt.com.example.myzq.model.common.custom_view.MyImageView
            android:id="@+id/Iv_head"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="14dp"
            app:srcCompat="@drawable/bg_code" />

        <TextView
            android:id="@+id/Tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginStart="12dp"

            android:layout_alignTop="@+id/Iv_head"
            android:layout_toEndOf="@+id/Iv_head"
            android:text="某某投顾" />

        <TextView
            android:id="@+id/Tv_num"
            android:textSize="12sp"
            android:textColor="#919191"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/Tv_name"
            android:layout_marginEnd="15dp"
            android:text="0" />

        <ImageView
            android:layout_marginTop="2dp"
            android:id="@+id/Iv_num"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignTop="@+id/Tv_name"
            android:layout_toStartOf="@+id/Tv_num"
            app:srcCompat="@mipmap/ic_renshu" />

        <TextView
            android:id="@+id/Tv_time_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:textSize="12sp"
            android:text="2019.6.13 09:30"
            android:textColor="#919191"
            android:layout_alignBottom="@+id/Iv_head"
            android:layout_alignStart="@+id/Tv_name"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="238"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Tv_content"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:textColor="#333333"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/Iv_head"
                android:text="4月8日傍晚，格力电器（000651，SZ）公告透露，格力集团拟通过公开征集受让方的方式..."
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/Ll_live"

                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/Iv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/Tv_time"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:textColor="#FFAE00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Ll_picture"
            android:layout_width="0dp"
            android:layout_weight="122"
            android:layout_height="match_parent">
            <zgt.com.example.myzq.model.common.custom_view.MyImageBackgroundView
                android:id="@+id/Iv_picture"
                android:layout_width="108dp"
                android:scaleType="fitXY"
                android:layout_marginRight="14dp"
                android:layout_height="72dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>